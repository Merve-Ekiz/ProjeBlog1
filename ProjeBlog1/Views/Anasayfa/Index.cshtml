@using EntityLayer.Concreate
@model List<Post>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left" >
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="single.html">
                                <img src="@item.image" class="card-img-top img-fluid" alt="" height="300" width="350">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))
                                        </a>
                                    </li>
                                  
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @item.Category.CategoryName
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="/Anasayfa/ReadAll/@item.PostId/">@item.PostCaption</a>
                                </h5>
                                <p class="card-text mb-3">@item.PostContent.Substring(0,item.PostContent.Substring(0,150).LastIndexOf(" "))...</p>
                                <a href="/Anasayfa/ReadAll/@item.PostId/" class="btn btn-primary read-m">Devamını Oku</a>
                                <br />
                            </div>
                        </div>
                    }




                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>