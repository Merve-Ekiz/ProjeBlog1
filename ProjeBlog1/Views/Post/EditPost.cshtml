@model EntityLayer.Concreate.Post
@{
    ViewData["Title"] = "EditPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-color:cadetblue; border:2px solid black; text-align:center;">
    <h3>Güncellenen Alanı kaydetmeyi unutmayınız..</h3>
</div>
<br />
@using (Html.BeginForm("EditPost", "Post", FormMethod.Post))
{
    @Html.HiddenFor(x => x.PostId )

    @Html.Label("Yazı Başlık")
    @Html.TextBoxFor(x => x.PostCaption, new { @class = "form-control" })
    <br />
    @Html.Label("Yazı Durumu")
    @Html.TextBoxFor(x => x.PostStatus, new { @class = "form-control" })
    <br />
    @Html.Label("Oluştuma tarihi")
    @Html.TextBoxFor(x => x.CreateDate, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori")
    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
    <br />
    @Html.Label("Yazı İçerik")
    @Html.TextAreaFor(x => x.PostContent, 10, 3, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>
}
